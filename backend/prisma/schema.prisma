generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  password          String?
  OauthId           String? 
  events            Events[] 
  accessToken       String?
  refreshToken      String?
  tokenExpiry       DateTime?
}

model Events {
  id                String   @id @default(cuid())
  title             String
  description       String
  startDate         DateTime
  endDate           DateTime
  googleEventId     String?
  userId            String
  user              User     @relation(fields: [userId], references: [id])
}